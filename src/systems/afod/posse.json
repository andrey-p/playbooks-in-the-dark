{
  "id": "posse",
  "name": "Posse",
  "playbooks": ["hellstone-scavengers"],
  "layout": [[
    ["name", "reputation"],
    "hideout",
    "coin",
    "repClaims",
    ["tier", "hold"],
    ["doom", "riders"],
    "achievements"
  ], [
    "posseXp",
    "specialAbilities",
    "modus",
    "contacts",
    "posseUpgrades",
    "cohorts"
  ]],
  "modules": {
    "name": {
      "id": "name",
      "type": "textField",
      "label": "Name"
    },
    "reputation": {
      "id": "reputation",
      "type": "textField",
      "label": "Reputation"
    },
    "hideout": {
      "id": "hideout",
      "type": "textField",
      "label": "Hideout"
    },
    "repClaims": {
      "id": "repClaims",
      "type": "multiTracker",
      "label": "Reputation & Claims",
      "props": {
        "trackers": {
          "rep": {
            "max": 12,
            "type": "rectangle",
            "size": 30,
            "label": "Rep"
          },
          "claims": {
            "max": 3,
            "reverse": true,
            "size": 12,
            "type": "square",
            "label": "Claims"
          }
        }
      }
    },
    "coin": {
      "id": "coin",
      "type": "multiTracker",
      "label": "Coin",
      "props": {
        "trackers": {
          "coin": {
            "max": 8,
            "type": "square",
            "label": "Coin"
          },
          "vault": {
            "max": 24,
            "type": "square",
            "label": "Vault"
          }
        }
      }
    },
    "hold": {
      "id": "hold",
      "type": "radioGroup",
      "label": "Hold",
      "props": {
        "type": "rectangle",
        "size": 30,
        "options": [
          { "id": "weak", "name": "Weak" },
          { "id": "strong", "name": "Strong" }
        ]
      }
    },
    "tier": {
      "id": "tier",
      "type": "tracker",
      "label": "Tier",
      "props": {
        "type": "square",
        "max": 4
      }
    },
    "doom": {
      "id": "doom",
      "type": "tracker",
      "label": "Doom",
      "props": {
        "type": "square",
        "max": 10
      }
    },
    "riders": {
      "id": "riders",
      "type": "tracker",
      "label": "Riders",
      "props": {
        "type": "square",
        "max": 4
      }
    },
    "achievements": {
      "id": "achievements",
      "type": "claims",
      "label": "Achievements"
    },
    "posseXp": {
      "id": "posseXp",
      "type": "tracker",
      "label": "Posse XP",
      "props": {
        "max": 8,
        "type": "rectangle",
        "size": 30
      }
    },
    "specialAbilities": {
      "id": "specialAbilities",
      "type": "specialAbilities",
      "label": "Special abilities"
    },
    "contacts": {
      "id": "contacts",
      "type": "contacts",
      "label": "Contacts"
    },
    "modus": {
      "id": "modus",
      "type": "textField",
      "label": "Modus"
    },
    "posseUpgrades": {
      "id": "posseUpgrades",
      "type": "items",
      "label": "Posse Upgrades",
      "props": {
        "twoColumns": true,
        "groups": [
          { "id": "hideout", "name": "Hideout" },
          { "id": "training", "name": "Training" },
          { "id": "quality", "name": "Quality" }
        ],
        "common": [
          { "id": "carriage", "name": "Carriage", "load": 2, "showLinked": false, "group": "hideout" },
          { "id": "hidden", "name": "Hidden", "load": 1, "group": "hideout" },
          { "id": "quarters", "name": "Quarters", "load": 1, "group": "hideout" },
          { "id": "secure", "name": "Secure", "load": 2, "showLinked": false, "group": "hideout" },
          { "id": "vault", "name": "Vault", "load": 2, "showLinked": false, "group": "hideout" },
          { "id": "escape tunnel", "name": "Escape Tunnel", "load": 1, "group": "hideout" },
          { "id": "workshop", "name": "Workshop", "load": 1, "group": "hideout" },
          { "id": "rail connection", "name": "Rail Connection", "load": 1, "group": "hideout" },
          { "id": "hellstone storage", "name": "Hellstone Storage", "load": 2, "showLinked": false, "group": "hideout" },

          { "id": "documents", "name": "Documents", "load": 1, "group": "quality" },
          { "id": "gear", "name": "Gear", "load": 1, "group": "quality" },
          { "id": "implements", "name": "Implements", "load": 1, "group": "quality" },
          { "id": "supplies", "name": "Supplies", "load": 1, "group": "quality" },
          { "id": "weapons", "name": "Weapons", "load": 1, "group": "quality" },
          { "id": "tools", "name": "Tools", "load": 1, "group": "quality" },

          { "id": "wit", "name": "Wit", "load": 1, "group": "training" },
          { "id": "prowess", "name": "Prowess", "load": 1, "group": "training" },
          { "id": "guts", "name": "Guts", "load": 1, "group": "training" },
          { "id": "personal", "name": "Personal", "load": 1, "group": "training" },
          { "id": "mastery", "name": "Mastery", "load": 4, "group": "training" }
        ]
      }
    },
    "cohorts": {
      "id": "cohorts",
      "type": "cohorts",
      "label": "Cohorts",
      "props": {
        "slots": 4,
        "radioGroups": {
          "gangExpert": {
            "type": "circle",
            "options": [
              { "id": "gang", "name": "Gang" },
              { "id": "expert", "name": "Expert" }
            ]
          },
          "harm": {
            "type": "rectangle",
            "size": 30,
            "options": [
              { "id": "weak", "name": "Weak" },
              { "id": "impaired", "name": "Impaired" },
              { "id": "broken", "name": "Broken" }
            ]
          },
          "armor": {
            "type": "rectangle",
            "size": 30,
            "options": [
              { "id": "armor", "name": "Armor" }
            ]
          }
        }
      }
    }
  }
}
