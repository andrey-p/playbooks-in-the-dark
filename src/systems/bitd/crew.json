    "assassins",
    "bravos",
    "cult",
    "hawkers",
    "smugglers",
    "shadows"
  ],
  "name": "Crew",
  "layout": [[
    ["name", "lair"],
    "deity",
    ["reputation", "repTurf"],
    ["hold", "tier"],
    "claims",
    ["heatWanted", "coin"],
    "favoredNotes",
    "notes"
  ], [
    "crewXp",
    "specialAbilities",
    "contacts",
    "crewUpgrades",
    "cohorts",
    "vehicleCohort"
  ]],
  "modules": {
    "name": {
      "id": "name",
      "type": "textField",
      "label": "Name"
    },
    "reputation": {
      "id": "reputation",
      "type": "textField",
      "label": "Reputation"
    },
    "lair": {
      "id": "lair",
      "type": "textField",
      "label": "Lair"
    },
    "deity": {
      "id": "deity",
      "type": "textField",
      "label": "Deity (choose 2 features)",
      "playbooks": ["cult"],
      "props": {
        "examples": [
          "Alluring",
          "Cruel",
          "Ferocious",
          "Monstrous",
          "Radiant",
          "Sinister",
          "Serene",
          "Transcendent"
        ]
      }
    },
    "repTurf": {
      "id": "repTurf",
      "type": "multiTracker",
      "label": "Reputation & Turf",
      "props": {
        "trackers": {
          "rep": {
            "max": 12,
            "type": "dagger",
            "label": "Rep"
          },
          "turf": {
            "max": 6,
            "reverse": true,
            "size": 12,
            "type": "square",
            "label": "Turf"
          }
        }
      }
    },
    "hold": {
      "id": "hold",
      "type": "radioGroup",
      "label": "hold",
