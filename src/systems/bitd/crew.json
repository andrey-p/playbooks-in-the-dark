{
  "id": "crew",
  "playbooks": ["bravos"],
  "name": "Crew",
  "layout": [[
    ["name", "lair"],
    ["reputation", "repTurf"],
    ["hold", "tier"],
    "claims",
    ["heatWanted", "coin"]
  ], [
    "crewXp",
    "specialAbilities"
  ]],
  "modules": {
    "name": {
      "id": "name",
      "type": "textField",
      "label": "Name"
    },
    "reputation": {
      "id": "reputation",
      "type": "textField",
      "label": "Reputation"
    },
    "lair": {
      "id": "lair",
      "type": "textField",
      "label": "Lair"
    },
    "repTurf": {
      "id": "repTurf",
      "type": "multiTracker",
      "label": "Reputation & Turf",
      "props": {
        "trackers": {
          "rep": {
            "max": 12,
            "type": "dagger",
            "label": "Rep"
          },
          "turf": {
            "max": 6,
            "reverse": true,
            "size": 12,
            "type": "square",
            "label": "Turf"
          }
        }
      }
    },
    "hold": {
      "id": "hold",
      "type": "radioGroup",
      "label": "hold",
      "props": {
        "type": "dagger",
        "size": 30,
        "options": [
          { "id": "weak", "name": "Weak" },
          { "id": "strong", "name": "Strong" }
        ]
      }
    },
    "tier": {
      "id": "tier",
      "type": "radioGroup",
      "label": "tier",
      "props": {
        "type": "circle",
        "options": [
          { "id": "1", "name": "1" },
          { "id": "2", "name": "2" },
          { "id": "3", "name": "3" },
          { "id": "4", "name": "4" }
        ]
      }
    },
    "claims": {
      "id": "claims",
      "type": "claims",
      "label": "Claims"
    },
    "crewXp": {
      "id": "crewXp",
      "type": "tracker",
      "label": "Crew XP",
      "props": {
        "max": 10,
        "type": "dagger"
      }
    },
    "specialAbilities": {
      "id": "specialAbilities",
      "type": "specialAbilities",
      "label": "Special abilities"
    },
    "heatWanted": {
      "id": "heatWanted",
      "type": "multiTracker",
      "label": "Heat / Wanted Level",
      "props": {
        "trackers": {
          "heat": {
            "max": 9,
            "type": "dagger",
            "label": "Heat"
          },
          "wanted": {
            "max": 4,
            "type": "dagger",
            "label": "Wanted"
          }
        }
      }
    },
    "coin": {
      "id": "coin",
      "type": "multiTracker",
      "label": "Coin",
      "props": {
        "trackers": {
          "coin": {
            "max": 4,
            "type": "square",
            "label": "Coin"
          },
          "vault": {
            "max": 12,
            "type": "square",
            "label": "Vault"
          }
        }
      }

    }
  }
}
