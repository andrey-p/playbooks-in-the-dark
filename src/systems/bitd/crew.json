        "options": [
          { "id": "weak", "name": "Weak" },
          { "id": "strong", "name": "Strong" }
        ]
      }
    },
    "tier": {
      "id": "tier",
      "type": "radioGroup",
      "label": "tier",
      "props": {
        "type": "circle",
        "options": [
          { "id": "1", "name": "1" },
          { "id": "2", "name": "2" },
          { "id": "3", "name": "3" },
          { "id": "4", "name": "4" }
        ]
      }
    },
    "claims": {
      "id": "claims",
      "type": "claims",
      "label": "Claims"
    },
    "crewXp": {
      "id": "crewXp",
      "type": "tracker",
      "label": "Crew XP",
      "props": {
        "max": 10,
        "type": "dagger"
      }
    },
    "specialAbilities": {
      "id": "specialAbilities",
      "type": "specialAbilities",
      "label": "Special abilities"
    },
    "contacts": {
      "id": "contacts",
      "type": "contacts",
      "label": "Contacts",
      "props": {
        "variant": "neutral"
      }
    },
    "heatWanted": {
      "id": "heatWanted",
      "type": "multiTracker",
      "label": "Heat / Wanted Level",
