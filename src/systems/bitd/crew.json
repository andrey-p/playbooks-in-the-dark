        "trackers": {
          "heat": {
            "max": 9,
            "type": "dagger",
            "label": "Heat"
          },
          "wanted": {
            "max": 4,
            "type": "dagger",
            "label": "Wanted"
          }
        }
      }
    },
    "coin": {
      "id": "coin",
      "type": "multiTracker",
      "label": "Coin",
      "description": "Upon crew advance, each PC gets stash = Tier + 2",
      "props": {
        "trackers": {
          "coin": {
            "max": 4,
            "type": "square",
            "label": "Coin"
          },
          "vault": {
            "max": 12,
            "type": "square",
            "label": "Vault"
          }
        }
      }
    },
    "favoredNotes": {
      "id": "favoredNotes",
      "type": "textArea",
      "label": "Favored grounds / operation",
      "props": {
        "height": 150
      }
    },
    "notes": {
      "id": "notes",
      "type": "textArea",
      "label": "Notes"
    },
    "crewUpgrades": {
      "id": "crewUpgrades",
      "type": "items",
