{
  "id": "pact",
  "name": "BUMP.Playbooks.pact",
  "playbooks": ["pact"],
  "layout": [
    [
      "name",
      "pact",
      "promise",
      "reputation",
      "baseDescription",
      "baseUpgrades"
    ],
    [
      "abilities",
      "pactTrackers"
    ],
    [
      "allies",
      "factions",
      "notes"
    ]
  ],
  "modules": {
    "name": {
      "id": "name",
      "type": "textField",
      "label": "BUMP.Modules.pactNameLabel",
      "hideModuleLabel": false
    },
    "pact": {
      "id": "pact",
      "type": "textArea",
      "label": "BUMP.Modules.pactLabel",
      "props": {
        "height": 200
      }
    },
    "promise": {
      "id": "promise",
      "type": "textArea",
      "label": "BUMP.Modules.promiseLabel",
      "props": {
        "height": 200
      }
    },
    "reputation": {
      "id": "reputation",
      "type": "textArea",
      "label": "BUMP.Modules.reputationLabel",
      "props": {
        "height": 200
      }
    },
    "baseDescription": {
      "id": "baseDescription",
      "type": "textArea",
      "label": "BUMP.Modules.baseDescriptionLabel",
      "props": {
        "height": 200
      }
    },
    "baseUpgrades": {
      "id": "baseUpgrades",
      "type": "items",
      "label": "BUMP.Modules.baseUpgradesLabel",
      "props": {
        "twoColumns": true,
        "trackerProps": {
          "type": "triangle"
        },
        "common": [
          {
            "id": "hidden",
            "name": "BUMP.Modules.baseUpgradesHidden",
            "load": 1
          },
          {
            "id": "quarters",
            "name": "BUMP.Modules.baseUpgradesQuarters",
            "load": 1
          },
          {
            "id": "secure",
            "name": "BUMP.Modules.baseUpgradesSecure",
            "load": 2
          },
          {
            "id": "library",
            "name": "BUMP.Modules.baseUpgradesLibrary",
            "load": 2
          },
          {
            "id": "iconic vehicle",
            "name": "BUMP.Modules.baseUpgradesIconicVehicle",
            "load": 2
          },
          {
            "id": "garage",
            "name": "BUMP.Modules.baseUpgradesGarage",
            "load": 2
          },
          {
            "id": "workshop",
            "name": "BUMP.Modules.baseUpgradesWorkshop",
            "load": 1
          },
          {
            "id": "containment",
            "name": "BUMP.Modules.baseUpgradesContainment",
            "load": 1
          },
          {
            "id": "armory",
            "name": "BUMP.Modules.baseUpgradesArmory",
            "load": 2
          },
          {
            "id": "laboratory",
            "name": "BUMP.Modules.baseUpgradesLaboratory",
            "load": 1
          },
          {
            "id": "pet",
            "name": "BUMP.Modules.baseUpgradesPet",
            "load": 1
          }
        ]
      }
    },
    "abilities": {
      "id": "abilities",
      "type": "specialAbilities",
      "label": "BUMP.Modules.abilitiesLabel"
    },
    "pactTrackers": {
      "id": "pactTrackers",
      "type": "multiTracker",
      "label": "BUMP.Modules.pactTrackersLabel",
      "hideModuleLabel": true,
      "props": {
        "trackers": {
          "trust": {
            "max": 4,
            "type": "square",
            "label": "BUMP.Modules.trustLabel"
          },
          "alarm": {
            "max": 8,
            "type": "square",
            "label": "BUMP.Modules.alarmLabel"
          },
          "panic": {
            "max": 4,
            "type": "square",
            "label": "BUMP.Modules.panicLabel"
          },
          "bond": {
            "max": 8,
            "type": "square",
            "label": "BUMP.Modules.bondLabel"
          }
        }
      }
    },
    "allies": {
      "id": "allies",
      "type": "cohorts",
      "label": "BUMP.Modules.alliesLabel",
      "props": {
        "slots": 8,
        "trackers": {
          "quality": {
            "max": 5,
            "type": "circle",
            "label": "BUMP.Modules.alliesQualityLabel"
          }
        },
        "radioGroups": {
          "expertCrew": {
            "type": "triangle",
            "options": [
              {
                "id": "expert",
                "name": "BUMP.Modules.alliesExpert"
              },
              {
                "id": "crew",
                "name": "BUMP.Modules.alliesCrew"
              }
            ]
          }
        }
      }
    },
    "factions": {
      "id": "factions",
      "type": "table",
      "label": "BUMP.Modules.factionsLabel",
      "props": {
        "columns": [
          { "heading": "BUMP.Modules.factionsFaction", "widthPct": 75 },
          { "heading": "BUMP.Modules.factionsStatus", "widthPct": 25 }
        ],
        "maxRows": 8
      }
    },
    "notes": {
      "id": "notes",
      "type": "textArea",
      "label": "BUMP.Modules.notesLabel",
      "props": {
        "height": 300
      }
    }
  }
}
